<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="readinglist" >
    <select id="findByReader" parameterType="String" resultType="Book">
        select * from book where reader=#{reader}
    </select>
</mapper>